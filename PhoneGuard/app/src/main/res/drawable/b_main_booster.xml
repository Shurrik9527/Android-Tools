<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/colorPrimaryLight" />
            <stroke android:width="@dimen/line_size" android:color="@color/white" />
            <corners android:radius="@dimen/element_double_space" />
            <padding android:bottom="0dp" android:left="@dimen/element_double_space" android:right="@dimen/element_double_space" android:top="0dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/colorPrimary" />
            <stroke android:width="@dimen/line_size" android:color="@color/white" />
            <corners android:radius="@dimen/element_double_space" />
            <padding android:bottom="0dp" android:left="@dimen/element_double_space" android:right="@dimen/element_double_space" android:top="0dp" />
        </shape>
    </item>
</selector>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_marginBottom="1dp"
    android:clickable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/junkcleaner_item_icon_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/junkcleaner_item_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/description_text"
        android:textSize="16sp"
        android:textStyle="normal"
        android:layout_toRightOf="@+id/junkcleaner_item_icon_iv"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/junkcleaner_item_total_size_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/description_text"
        android:layout_toLeftOf="@+id/junkcleaner_item_rl"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/junkcleaner_item_rl"
        android:layout_marginRight="20dp"
        android:layout_width="35dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_height="35dp">

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/junkcleaner_item_cb"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            />

        <com.hz.maiku.maikumodule.widget.ProgressWheel
            android:id="@+id/junkcleaner_item_pw"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:matProg_barColor="@color/colorPrimary"
            app:matProg_barWidth="2dp"
            android:layout_centerInParent="true"
            app:matProg_progressIndeterminate="true" />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    >



    <RelativeLayout
        android:id="@+id/optimized_rotate_rl"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        >

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/success_icon"
            android:layout_centerInParent="true"
            />

        <ImageView
            android:id="@+id/optimized_success_rotate_iv"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@mipmap/rotate_icon0"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>


    <RatingBar
        android:id="@+id/optimized_rb"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/optimized_rotate_rl"
        android:layout_centerHorizontal="true"
        android:focusable="false"
        android:progressDrawable="@mipmap/optimized_rate_icon"
        android:isIndicator="false"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:text="OPTIMIZED"
        android:textStyle="normal"
        android:layout_below="@+id/optimized_rb"
        />


</RelativeLayout>
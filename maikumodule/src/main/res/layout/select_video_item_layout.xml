<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/select_video_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BBBBBB">

    <ImageView
        android:id="@+id/select_video_iv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        />

    <CheckBox
        android:id="@+id/select_video_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:buttonTint="@color/colorPrimary"
        />

    <TextView
        android:id="@+id/select_video_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/select_video_iv"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/stroke_gray_solid_transparent_radius5"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="10sp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        />

    <TextView
        android:id="@+id/select_video_size_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/select_video_iv"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/stroke_gray_solid_transparent_radius5"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="10sp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        />


</RelativeLayout>

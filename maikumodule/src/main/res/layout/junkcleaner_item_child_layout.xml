<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:clickable="true"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        >

        <ImageView
            android:id="@+id/junkcleaner_item_child_icon_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/junkcleaner_item_child_title_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/description_text"
            android:singleLine="true"
            android:paddingRight="10dp"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/junkcleaner_item_child_totail_size_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/description_text"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/junkcleaner_item_child_cb"
                android:layout_width="28dp"
                android:layout_height="28dp" />

            <com.hz.maiku.maikumodule.widget.CircularProgress
                android:id="@+id/junkcleaner_item_child_cp"
                app:borderWidth="2dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </RelativeLayout>

    </LinearLayout>

    <include layout="@layout/gap_line_item_view"></include>
</LinearLayout>
